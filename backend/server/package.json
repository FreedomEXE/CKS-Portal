{
  "name": "cks-portal-backend",
  "version": "1.0.0",
  "description": "CKS Portal API server (TypeScript)",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:fastify": "ts-node-dev --respawn --transpile-only src/fastify.ts",
    "build": "tsc",
    "start": "node build/index.js",
    "lint": "eslint \"src/**/*.{ts,js}\" \"routes/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" \"routes/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "migrate": "node-pg-migrate -m migrations up",
    "migrate:down": "node-pg-migrate -m migrations down",
    "migrate:create": "node-pg-migrate -m migrations create",
    "docs:gen": "ts-node src/openapi.ts > openapi.json"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "fastify": "^4.29.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "lru-cache": "^10.4.3",
    "pg": "^8.11.5",
    "pino": "^9.3.1",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.6",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "node-pg-migrate": "^7.6.2",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
