{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  "incremental": true,
  "types": ["node"]
  },
  "include": ["src/**/*.ts", "routes/**/*.ts", "utils/**/*.ts", "db/**/*.ts"],
  "exclude": ["node_modules", "build", "**/*.test.ts", "**/__tests__/**/*"]
}
